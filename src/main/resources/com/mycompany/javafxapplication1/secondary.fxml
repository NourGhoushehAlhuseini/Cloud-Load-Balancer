<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.javafxapplication1.SecondaryController">
    <children>
        <Label text="File Management" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        
        <TableView fx:id="dataTableView" prefHeight="250.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="fileNameColumn" text="File Name" prefWidth="150"/>
                <TableColumn fx:id="ownerColumn" text="Owner" prefWidth="120"/>
                <TableColumn fx:id="fileSizeColumn" text="File Size (Bytes)" prefWidth="120"/>
                <TableColumn fx:id="uploadDateColumn" text="Date Uploaded" prefWidth="150"/>
                <TableColumn fx:id="filePathColumn" text="File Path" prefWidth="180"/>
                <TableColumn fx:id="permissionsColumn" text="Permissions" prefWidth="120"/>
            </columns>
        </TableView>

        <GridPane hgap="15" vgap="15" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints minWidth="180.0" prefWidth="200.0"/>
                <ColumnConstraints minWidth="180.0" prefWidth="200.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="40.0" prefHeight="50.0"/>
                <RowConstraints minHeight="40.0" prefHeight="50.0"/>
                <RowConstraints minHeight="40.0" prefHeight="50.0"/>
                <RowConstraints minHeight="40.0" prefHeight="50.0"/>
            </rowConstraints>
            <children>
                <Button fx:id="uploadFileBtn" text="Upload File" onAction="#handleUploadFile" GridPane.columnIndex="0"/>
                <Button fx:id="downloadFileBtn" text="Download File" onAction="#handleDownloadFile" GridPane.columnIndex="1"/>
                <Button fx:id="deleteFileBtn" text="Delete File" onAction="#handleDeleteFile" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Button fx:id="shareFileBtn" text="Share File" onAction="#handleShareFile" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Button fx:id="updatePermissionsBtn" text="Update Permissions" onAction="#handleUpdatePermissions" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <Button fx:id="refreshBtn" text="Refresh" onAction="#refreshFileList" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Button fx:id="secondaryButton" text="Return to Login" onAction="#switchToPrimary" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2"/>
            </children>
        </GridPane>
    </children>
</VBox>
