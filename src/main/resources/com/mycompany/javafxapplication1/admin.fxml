<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.javafxapplication1.AdminController">
    <children>
        <Label text="Admin Panel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <VBox spacing="10">
            <TextField fx:id="usernameField" promptText="Enter Username"/>
            <PasswordField fx:id="newPasswordField" promptText="Enter New Password"/>
        </VBox>

        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints minWidth="150.0" prefWidth="200.0"/>
                <ColumnConstraints minWidth="150.0" prefWidth="200.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="40.0" prefHeight="50.0"/>
                <RowConstraints minHeight="40.0" prefHeight="50.0"/>
            </rowConstraints>
            <children>
                <Button fx:id="updatePasswordButton" text="Update Password" onAction="#handleUpdatePassword" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Button fx:id="deleteUserButton" text="Delete User" onAction="#handleDeleteUser" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Button fx:id="logoutButton" text="Logout" onAction="#handleLogout" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2"/>
            </children>
        </GridPane>
    </children>
</VBox>
